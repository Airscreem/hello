@import 'mix/mix.styl'
@import 'reset.styl'

$white = #fff
$black = #000
$font-family = Arial, sans-serif

*
  box-sizing border-box

html, body
  width 100%
  background #fff

ul
  text-align center
  padding-top 10px
  li
    display inline-block
    padding 0 10px
    a
      text-transform uppercase
      font 16px $font-family
      color $black

/*TABLE*/
.table
  display table

  &-cell
    display table-cell
    vertical-align middle

  &-block-wrapper
    width 300px
    margin 0 auto

/*INLINE*/
.inline
  text-align center
  font-size 0
  display block
  
.s-block
  display inline-block
  font-size 16px
  vertical-align middle
  
.f-block
  height 100%
  display inline-block
  vertical-align middle
  
/*MARGIN MINUS*/
.margin-minus
  &-block
    position absolute
    width 400px
    height 68px
    top 50%
    left 50%
    margin-left -200px
    margin-top -34px
    
/*MARGIN AUTO*/
.margin-auto
  &-block
    position absolute
    width 400px
    height 68px
    top 0
    left 0
    bottom 0
    right 0
    margin auto
    
.none
  display none
  
.fon
  position fixed
  width 100%
  height 100%
  background rgba(0,0,0,0.6)
  z-index 100
  top 0
  left 0



.close-block
  position absolute
  top 20px
  right 20px
  cursor pointer
  font-size 30px
  color #fff
  transition all 0.1s linear
  
  &:hover
    color #cf5252

.test-block
  text-align center
  font bold 24px $font-family
  color $white
  padding 20px
  border-radius 5px
  background #000